<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/background_dark</item>
    </style>

    <style name="MenuScreenButtons">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowColor">@color/transparent_gray</item>
        <item name="android:shadowRadius">6</item>
    </style>

    <style name="StartScreenButtons" parent="MenuScreenButtons">
        <item name="android:textSize">60dp</item>
    </style>

    <style name="MusicScreenButtons" parent="MenuScreenButtons">
        <item name="android:textSize">48dp</item>
    </style>

    <style name="RadioScreenButtons" parent="MenuScreenButtons">
        <item name="android:textSize">48dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
